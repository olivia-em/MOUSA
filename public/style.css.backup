/* Μοῦσα Ultra-Minimal Translation Experience */

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Georgia", "Times New Roman", serif;
  line-height: 1.6;
  color: #333;
  background: #fafafa;
  min-height: 100vh;
  overflow-x: hidden;
}

.minimal-container {
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px;
  position: relative;
}

/* Translation Display - Centered */
.translation-display {
  max-width: 800px;
  width: 100%;
  text-align: center;
}

.text-content {
  font-size: 2.2em;
  line-height: 1.5;
  color: #2c3e50;
  font-weight: 400;
  letter-spacing: 0.5px;
  position: relative;
}

.fade-word {
  display: inline;
}

.text-content.english {
  font-family: "Georgia", "Times New Roman", serif;
  font-style: italic;
}

.text-content.error {
  color: #e74c3c;
  font-weight: 600;
  font-style: normal;
  font-size: 1.5em;
}

/* Floating Button - Bottom Right */
.floating-btn {
  position: fixed;
  bottom: 40px;
  right: 40px;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  border: none;
  background: linear-gradient(145deg, #3498db, #2980b9);
  color: white;
  font-size: 2em;
  cursor: pointer;
  box-shadow: 0 8px 25px rgba(52, 152, 219, 0.3);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.floating-btn:hover:not(:disabled) {
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 12px 35px rgba(52, 152, 219, 0.4);
  background: linear-gradient(145deg, #2980b9, #1f618d);
}

.floating-btn:active:not(:disabled) {
  transform: translateY(-1px) scale(1.02);
}

.floating-btn.loading {
  animation: spin 1s linear infinite;
}

.floating-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.floating-btn.running {
  background: linear-gradient(145deg, #e74c3c, #c0392b);
  box-shadow: 0 8px 25px rgba(231, 76, 60, 0.3);
}

.floating-btn.running:hover:not(:disabled) {
  background: linear-gradient(145deg, #c0392b, #a93226);
  box-shadow: 0 12px 35px rgba(231, 76, 60, 0.4);
}

.btn-text {
  transition: all 0.3s ease;
  margin-left: 4px; /* Slight offset for play button visual balance */
}

/* Utility Classes */
.hidden {
  display: none !important;
}

/* Animations */
@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes blink {
  0%,
  50% {
    opacity: 1;
  }
  51%,
  100% {
    opacity: 0;
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .minimal-container {
    padding: 30px 20px;
  }

  .text-content {
    font-size: 1.8em;
  }

  .floating-btn {
    width: 70px;
    height: 70px;
    font-size: 1.8em;
    bottom: 30px;
    right: 30px;
  }
}

@media (max-width: 480px) {
  .minimal-container {
    padding: 20px 15px;
  }

  .text-content {
    font-size: 1.5em;
  }

  .floating-btn {
    width: 60px;
    height: 60px;
    font-size: 1.6em;
    bottom: 25px;
    right: 25px;
  }
}

/* Typography refinements */
@media (min-width: 1200px) {
  .text-content {
    font-size: 2.5em;
    max-width: 900px;
    margin: 0 auto;
  }
}

/* Progress Indicator */
.progress-indicator {
  width: 100%;
  margin: 30px 0;
  animation: fadeInUp 0.8s ease-out;
}

.progress-steps {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  margin: 0 auto;
  max-width: 500px;
}

.progress-steps::before {
  content: "";
  position: absolute;
  top: 25px;
  left: 12.5%;
  right: 12.5%;
  height: 3px;
  background: rgba(255, 255, 255, 0.3);
  z-index: 1;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  position: relative;
  z-index: 2;
  transition: all 0.4s ease;
}

.step-number {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 1.2em;
  margin-bottom: 10px;
  border: 3px solid rgba(255, 255, 255, 0.3);
  transition: all 0.4s ease;
}

.step-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 0.9em;
  font-weight: 500;
  max-width: 80px;
  line-height: 1.2;
}

.step.active .step-number {
  background: linear-gradient(145deg, #f39c12, #e67e22);
  border-color: #f39c12;
  box-shadow: 0 0 20px rgba(243, 156, 18, 0.5);
  transform: scale(1.1);
}

.step.active .step-label {
  color: white;
  font-weight: 600;
}

.step.completed .step-number {
  background: linear-gradient(145deg, #27ae60, #2ecc71);
  border-color: #27ae60;
  box-shadow: 0 0 15px rgba(39, 174, 96, 0.4);
}

.step.completed .step-label {
  color: rgba(255, 255, 255, 0.9);
}

/* Translation Display */
.translation-display {
  width: 100%;
  margin: 30px 0;
  animation: fadeInUp 0.6s ease-out;
}

.current-text {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15px;
  padding: 30px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  margin-bottom: 20px;
  backdrop-filter: blur(10px);
}

.text-content {
  font-size: 1.3em;
  line-height: 1.8;
  margin-bottom: 15px;
  color: #2c3e50;
  text-align: left;
  min-height: 60px;
}

.text-content.greek {
  font-family: "Times New Roman", "DejaVu Serif", serif;
  font-size: 1.4em;
  color: #8e44ad;
  text-align: center;
  font-weight: 500;
}

.text-content.english {
  font-family: "Georgia", "Times New Roman", serif;
  color: #2c3e50;
  font-style: italic;
}

.text-content.error {
  color: #e74c3c;
  font-weight: 600;
  text-align: center;
}

.text-language {
  font-size: 0.9em;
  color: #7f8c8d;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: 600;
  text-align: center;
  padding: 8px;
  background: rgba(52, 73, 94, 0.1);
  border-radius: 20px;
  margin-top: 15px;
}

/* Footer */
footer {
  margin-top: 40px;
  text-align: center;
  animation: fadeInUp 1.2s ease-out;
}

footer p {
  color: rgba(255, 255, 255, 0.7);
  font-size: 0.9em;
}

/* Utility Classes */
.hidden {
  display: none !important;
}

/* Animations */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%,
  100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .audio-container {
    padding: 15px;
  }

  header h1 {
    font-size: 2.5em;
  }

  .subtitle {
    font-size: 1.1em;
  }

  .cycle-btn {
    padding: 18px 35px;
    font-size: 1.2em;
    min-width: 250px;
  }

  .progress-steps {
    max-width: 400px;
  }

  .step-number {
    width: 40px;
    height: 40px;
    font-size: 1em;
  }

  .step-label {
    font-size: 0.8em;
    max-width: 70px;
  }

  .text-content {
    font-size: 1.1em;
  }

  .text-content.greek {
    font-size: 1.2em;
  }

  .current-text {
    padding: 20px;
  }
}

@media (max-width: 480px) {
  header h1 {
    font-size: 2em;
  }

  .cycle-btn {
    padding: 15px 30px;
    font-size: 1.1em;
    min-width: 220px;
  }

  .progress-steps {
    max-width: 350px;
  }

  .step-number {
    width: 35px;
    height: 35px;
    font-size: 0.9em;
  }

  .step-label {
    font-size: 0.75em;
    max-width: 60px;
  }
}

section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15px;
  padding: 30px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10px);
}

/* Odyssey Section */
.odyssey-section {
  display: flex;
  flex-direction: column;
  gap: 25px;
}

.original-text h2 {
  color: #333;
  margin-bottom: 20px;
  font-size: 1.6em;
  border-bottom: 3px solid #667eea;
  padding-bottom: 10px;
}

.greek-text {
  background: #f8f9fa;
  border: 2px solid #e9ecef;
  border-radius: 10px;
  padding: 20px;
  font-family: "Georgia", "Times New Roman", serif;
  font-size: 16px;
  line-height: 1.8;
  color: #333;
  max-height: 300px;
  overflow-y: auto;
}

.text-content {
  white-space: pre-wrap;
}

/* Controls */
.controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 10px;
  border: 2px solid rgba(102, 126, 234, 0.2);
}

.cycle-counter {
  font-size: 18px;
  color: #333;
}

.cycle-counter strong {
  color: #667eea;
  font-size: 24px;
}

/* Translation Results */
.translation-results {
  display: flex;
  flex-direction: column;
  gap: 20px;
}
section h2 {
  color: #333;
  margin-bottom: 20px;
  font-size: 1.8em;
  font-weight: 500;
  border-bottom: 3px solid #667eea;
  padding-bottom: 10px;
}

/* Form Styles */
.form-group {
  margin-bottom: 20px;
}

.form-row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
  margin-bottom: 20px;
}

.form-group label {
  display: block;
  margin-bottom: 8px;
  font-weight: 600;
  color: #555;
}

.form-group input,
.form-group select,
.form-group textarea {
  width: 100%;
  padding: 12px 15px;
  border: 2px solid #e1e5e9;
  border-radius: 8px;
  font-size: 16px;
  font-family: inherit;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
  background: #fff;
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

textarea {
  resize: vertical;
  min-height: 100px;
}

/* Checkbox Styles */
.form-group label input[type="checkbox"] {
  width: auto;
  margin-right: 8px;
  transform: scale(1.2);
}

/* Buttons */
.btn-primary,
.btn-secondary,
.btn-small {
  padding: 12px 24px;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
  text-align: center;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

.btn-secondary {
  background: #6c757d;
  color: white;
  box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
}

.btn-secondary:hover {
  background: #5a6268;
  transform: translateY(-1px);
}

.btn-small {
  padding: 8px 16px;
  font-size: 14px;
  background: #28a745;
  color: white;
}

.btn-small:hover {
  background: #218838;
}

/* Result Sections */
.result-section {
  margin-top: 25px;
  padding: 20px;
  background: #f8f9fa;
  border-radius: 10px;
  border-left: 4px solid #667eea;
}

.result-section h3 {
  color: #333;
  margin-bottom: 15px;
  font-size: 1.3em;
}

.result-content {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.result-text {
  background: white;
  padding: 15px;
  border-radius: 8px;
  border: 1px solid #dee2e6;
  font-size: 16px;
  line-height: 1.5;
}

.result-meta {
  color: #666;
  font-size: 14px;
  font-style: italic;
}

/* Cycle Results */
.cycle-result {
  background: white;
  border: 2px solid #e9ecef;
  border-radius: 12px;
  padding: 25px;
  margin-bottom: 20px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.cycle-result:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
}

.cycle-result.error {
  border-color: #dc3545;
  background: #fff5f5;
}

.cycle-header {
  margin-bottom: 20px;
}

.cycle-header h3 {
  color: #667eea;
  margin: 0;
  font-size: 1.4em;
  font-weight: 600;
}

.translation-step {
  margin-bottom: 20px;
}

.translation-step:last-child {
  margin-bottom: 0;
}

.translation-step h4 {
  color: #333;
  margin-bottom: 12px;
  font-size: 1.1em;
  font-weight: 600;
}

.translation-text {
  padding: 15px;
  border-radius: 8px;
  font-size: 15px;
  line-height: 1.6;
  border-left: 4px solid #667eea;
}

.translation-text.english {
  background: #f0f4ff;
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
}

.translation-text.greek {
  background: #fff8f0;
  font-family: "Georgia", "Times New Roman", serif;
  border-left-color: #ff9500;
} /* Results Management */
.results-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  background: white;
  border: 1px solid #dee2e6;
  border-radius: 8px;
}

.result-info strong {
  color: #333;
  font-size: 16px;
}

.result-info small {
  color: #666;
  font-size: 13px;
}

.result-actions {
  flex-shrink: 0;
}

/* Loading and Error States */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 20px;
  color: #667eea;
  font-weight: 500;
}

.loading::after {
  content: "";
  width: 20px;
  height: 20px;
  border: 2px solid #f3f3f3;
  border-top: 2px solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.error {
  color: #dc3545;
  background: #f8d7da;
  border: 1px solid #f5c6cb;
  border-radius: 6px;
  padding: 15px;
  font-weight: 500;
}

/* Footer */
footer {
  text-align: center;
  padding: 30px 0;
  color: rgba(255, 255, 255, 0.8);
  font-size: 14px;
  margin-top: 40px;
}

/* Responsive Design */
@media (max-width: 768px) {
  .container {
    padding: 15px;
  }

  header h1 {
    font-size: 2em;
  }

  section {
    padding: 20px;
  }

  .form-row {
    grid-template-columns: 1fr;
  }

  .result-item {
    flex-direction: column;
    align-items: stretch;
    gap: 10px;
  }

  .result-actions {
    align-self: flex-end;
  }
}

@media (max-width: 480px) {
  header h1 {
    font-size: 1.6em;
  }

  section {
    padding: 15px;
  }

  .btn-primary,
  .btn-secondary {
    width: 100%;
  }
}
